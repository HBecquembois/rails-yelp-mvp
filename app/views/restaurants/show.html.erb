<%= render @restaurant %>

<h3>Reviews</h3>

 <div>
  <% @restaurant.reviews.each do |review| %>
    <p>
    <%= review.content %>
    </p>
    <p>
      <%= review.rating %>
    </p>
  <% end %>
</div>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>
  
  <h3>Add a review for <%= @restaurant.name %></h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to restaurants", restaurants_path %>
</div>
